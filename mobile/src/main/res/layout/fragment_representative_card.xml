<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/dem_congress1"
                app:civ_border_color="#FF000000"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/party_image"
                android:src="@drawable/republican"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"/>


        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/frameLayout"
            android:paddingTop="5dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/republican"
                    android:id="@+id/partyText"
                    android:layout_column="0"
                    android:textSize="16dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cong_m"
                    android:id="@+id/titleText"
                    android:layout_column="1"
                    android:textSize="16dp"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/placeName"
                    android:id="@+id/nameText"
                    android:layout_column="0"
                    android:textSize="16dp"
                    android:layout_span="2"
                    android:textColor="#000000" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_column="0"
                    android:layout_span="2">


                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/homeBtn"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home"
                        android:padding="0dp"
                        android:clickable="true"
                        android:backgroundTint="#00ffffff" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/fbBtn"
                        android:layout_marginRight="15dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fb"
                        android:padding="0dp"
                        android:clickable="true" />

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/twitterBtn"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/twitter"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        android:clickable="true" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:text="New Button"
                        android:id="@+id/moreBtn"
                        android:src="@drawable/more_options"
                        android:backgroundTint="#00ffffff"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        />

                </LinearLayout>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>