<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:minHeight="150dp"
            android:id="@+id/frameLayout">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="top|center"
                android:src="@drawable/dem_senator1"
                app:civ_border_color="#FF000000"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/party_image"
                android:src="@drawable/republican"
                android:layout_gravity="top|left"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/type_image"
                android:src="@drawable/fb"
                android:layout_gravity="top|center"
                android:layout_marginTop="100dp"/>


        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\@placeholderid"
                android:id="@+id/summaryText"
                android:textSize="16dp"
                android:layout_marginRight="5dp"
                android:textColor="#787878"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" placeholder textLong placeholder textLong placehold placeholder textLong placeholder textLong placeholdLong placeholder textLong placeholder textLong placeholder textLong placeholder textLong placeholder textLong placeholder textLong placeholder textLong placeholder textLong placeholder text"
                android:id="@+id/contentText"
                android:layout_column="0"
                android:textSize="16dp"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1 hr ago"
                    android:id="@+id/timeText"
                    android:textColor="#000000"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp" />

            </RelativeLayout>



        </LinearLayout>



